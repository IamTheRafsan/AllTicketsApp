<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bus"
    android:orientation="vertical"
    android:background="@drawable/back"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_margin="12dp"
        android:background="@drawable/header1">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/backtop"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40dp"
            >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/shohozLaunch"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:orientation="horizontal"
                    android:backgroundTint="#89ecda"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    >


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/webicon"
                        >

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="Shohoz.com"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        >

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bdTicketsLaunch"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:orientation="horizontal"
                    android:backgroundTint="#89ecda"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    >


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/webicon"
                        >

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="BdTickets.com"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        >

                    </TextView>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/launchBdLaunch"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:orientation="horizontal"
                    android:backgroundTint="#89ecda"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    >


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/webicon"
                        >

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="Launchbd.com"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        >

                    </TextView>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/paribahnLaunch"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:orientation="horizontal"
                    android:backgroundTint="#89ecda"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    >


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/webicon"
                        >

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="Paribahn.com"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        >

                    </TextView>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>






</LinearLayout>