<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bus"
    android:orientation="vertical"
    android:background="@drawable/back"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_margin="12dp"
        android:background="@drawable/header1">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/backtop"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/gozayaan"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:orientation="horizontal"
                    android:backgroundTint="#fdcf58"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    >


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/webicon"
                        >

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="GoZayaan.com"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        >

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sharetrip"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:orientation="horizontal"
                    android:backgroundTint="#fdcf58"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    >


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/webicon"
                        >

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="ShareTrip.com"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        >

                    </TextView>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/flightExpert"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:orientation="horizontal"
                    android:backgroundTint="#fdcf58"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    >


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/webicon"
                        >

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="FlightExpert.com"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        >

                    </TextView>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/bimanBangladesh"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:orientation="horizontal"
                    android:backgroundTint="#fdcf58"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    >


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/webicon"
                        >

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="Biman Bangladesh"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        >

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/usBangla"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:orientation="horizontal"
                    android:backgroundTint="#fdcf58"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    >


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/webicon"
                        >

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="US Bangla"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        >

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/novoAir"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:orientation="horizontal"
                    android:backgroundTint="#fdcf58"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    >


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/webicon"
                        >

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="Novoair"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        >

                    </TextView>

                </LinearLayout>




            </LinearLayout>
        </ScrollView>
    </LinearLayout>






</LinearLayout>